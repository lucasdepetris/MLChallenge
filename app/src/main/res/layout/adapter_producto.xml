<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        android:id="@+id/cv"
        >
        <RelativeLayout
            android:background="@color/grayBackground"
            android:id="@+id/cont_buscarProductos"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <ImageView
                android:padding="10dp"
                android:id="@+id/imgProducto"
                android:layout_width="120dp"
                android:layout_height="80dp" />
            <TextView
                android:paddingRight="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/TitleProduct"
                android:layout_toRightOf="@+id/imgProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/TitleProduct"
                android:layout_toRightOf="@+id/imgProducto"
                android:id="@+id/precioProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/condition"
                android:layout_below="@id/precioProducto"
                android:layout_toRightOf="@+id/imgProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/acceptMP"
                android:layout_below="@id/precioProducto"
                android:layout_toRightOf="@+id/condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/seller_status"
                android:layout_below="@id/acceptMP"
                android:layout_toRightOf="@+id/imgProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>